{{#if loggedIn }}
{{#if admin}}
<div class="single-container">  <!-- Create courses, only available for admin accounts -->
        <div class="row">
            <div class="col l3 s12"></div>
            <div class="col l6 s12">
                <div class="card z-depth-3">
                    <div class="center log-sign-title">
                        <span >Create New Class</span>
                    </div>  
                    <form class="card-content form-container">
                        <div class="row">
                            <div class="input-field col s12">
                                <span class="prefix"></span>
                                <textarea id="courseName" class="materialize-textarea body"></textarea>
                                <label for="courseName">Course Name</label>
                            </div>
                            <div class="input-field col s12">
                                <span class="prefix"></span>
                                <textarea id="maxCapacity" class="materialize-textarea body"></textarea>
                                <label for="maxCapacity">Max Capacity</label>
                            </div>
                            <div class="input-field col s12">
                                <span class="prefix"></span>
                                <textarea id="courseDescription" class="materialize-textarea body"></textarea>
                                <label for="courseDescription">Course Description</label>
                            </div>
                            <div class="col s12 center-align">
                                <button id="submitCourse"class="btn waves-effect waves-light align-center green darken-1" type="submit">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
</div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src = "https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script src="/js/add-course.js"></script>
    <script src="/js/global.js"></script>
{{/if}}    
{{/if}}