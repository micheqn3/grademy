<div class="container"> <!-- Template for viewing one course-->
    <div class="row center-align"> 
        <div class="col 16 s12">
            <div class="card-content center-align">
                <h2 class="courseName card-title" style="font-size: 275%; color: darkgreen; font-weight: bold; margin-top: 5%;">
                    {{ course.course_name }}
                </h2>
                <h5 class="courseFormat center-align" style="font-size: 175%; color:white; margin: 5% 5%">
                    Online and Instructor Led
                </h5>
                <p class="maxCapacity center-align" style="font-size: 150%; color: white; margin: 5% 5%;">
                    Max Capacity: {{ course.max_capacity }}
                </p>
                <p class="teacherID center-align" style="font-size: 150%; color:white; margin: 5% 5%;">
                    Instructor ID: {{ course.admin_instructor_id }}
                </p>
                <p class="courseDescription center-align" style="font-size: 150%; color: white; margin: 5% 5%;"> 
                    Course Description:
                    <br>
                    <br>
                    {{ course.course_description }}
                </p>
            </div>
        </div>
        {{#if student}}
        <button id="addCourse" class="btn-small center-align ", type="submit" style="font-weight: bold; background-color: darkgreen; margin-top: 3%;">Add Course</button>  
        <br>
        <br>
        <button id="dropCourse" class="btn-small center-align ", type="submit" style="font-weight: bold; background-color: darkgreen; margin-top: 3%; margin-bottom: 5%;">Drop Course</button> 
        {{/if}}
    </div>
</div>
<script src="/js/courseSignup.js"></script>
<script src="/js/courseDrop.js"></script>