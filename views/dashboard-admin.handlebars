{{#if admin}}
<div class="container-flex">
    <div class="col s10 offset-s-2 m8 offset-m-8">
        <h2 class="center-align">Admin Dashboard</h2>
    </div>

    {{> course-partials courses}}

    <div class="row">
        <div class="col s10 m12">
            <h3>Courses</h3>
            <hr>
        </div>

        <div class="col s12 m6 l4 xl3">
          <div class="card green darken-1">
            <div class="card-content white-text">
              <span class="card-title">Create course</span>
              <p>Sign up and drop courses</p>
            </div>
            <div class="card-action">
              <a class="black-text" href="/dash/create">Go to courses</a>
            </div>
          </div>
        </div>
    </div>
    <div class="row">
        <div class="col s10 m12">
            <h3>Chat</h3>
            <hr>
        </div>
        <div class="col s12 m6 l4 xl3">
          <div class="card green darken-1">
            <div class="card-content white-text">
              <span class="card-title">Office Hours</span>
              <p>Help students in office hours via chat</p>
            </div>
            <div class="card-action">
              <a class='black-text' href="/chat">Go to chat</a>
            </div>
          </div>
        </div>
    </div>
</div>

{{/if}}